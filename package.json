{
  "name": "criterium-edu",
  "version": "1.0.0",
  "description": "Educational platform for task solutions and reviews",
  "scripts": {
    "nx": "nx",
    "start": "nx serve",
    "build": "nx build",
    "lint": "nx lint",
    "affected": "nx affected",
    "affected:apps": "nx affected:apps",
    "affected:libs": "nx affected:libs",
    "affected:build": "nx affected:build",
    "affected:lint": "nx affected:lint",
    "api:serve": "nx serve api",
    "api:build": "nx build api",
    "api:build:migrations": "tsc apps/api/src/database/migrations/*.ts apps/api/src/database/data-source*.ts --outDir dist/apps/api/src/database --target ES2022 --module commonjs --esModuleInterop --experimentalDecorators --emitDecoratorMetadata --moduleResolution node",
    "api:build:all": "nx run-many --target=build --projects=api --configuration=production && nx run api:build:migrations",
    "api:lint": "nx lint api",
    "web:serve": "nx serve web",
    "web:build": "nx build web",
    "web:lint": "nx lint web",
    "shared:build": "nx build shared",
    "build:all": "nx run-many --target=build --all --configuration=production",
    "lint:all": "nx run-many --target=lint --all",
    "typeorm:generate": "nx run api:typeorm:generate",
    "typeorm:migrate": "npm run api:build:migrations && npx typeorm migration:run -d dist/apps/api/src/database/data-source.migration.js",
    "typeorm:revert": "nx run api:typeorm:revert",
    "docker:build:api": "nx run api:docker-build",
    "docker:build:web": "nx run web:docker-build",
    "docker:build:all": "nx run-many --target=docker-build --all",
    "format": "nx format:write",
    "format:check": "nx format:check",
    "graph": "nx graph",
    "help": "nx help"
  },
  "keywords": [
    "education",
    "task",
    "review",
    "platform",
    "nx",
    "monorepo"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@hookform/resolvers": "^5.0.1",
    "@nestjs/common": "^11.0.12",
    "@nestjs/config": "^4.0.1",
