{
  "name": "criterium-edu",
  "version": "1.0.0",
  "description": "Educational platform for task solutions and reviews",
  "scripts": {
    "build": "nest build",
    "build:migrations": "tsc apps/api/src/database/migrations/*.ts apps/api/src/database/data-source*.ts --outDir dist/apps/api/src/database --target ES2022 --module commonjs --esModuleInterop --experimentalDecorators --emitDecoratorMetadata --moduleResolution node",
    "format": "prettier --write \"apps/**/*.ts\" \"libs/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/apps/api/src/main.js",
    "start:api": "nest start --watch",
    "start:web": "npm run dev -w apps/web-ui",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "build:api": "nest build",
    "build:web": "npm run build apps/web-ui",
    "build:all": "npm run build:api && npm run build:migrations && npm run build:web",
    "typeorm:generate": "npx typeorm-ts-node-esm migration:generate -d apps/api/src/database/data-source.local.ts",
    "typeorm:migrate": "npm run build:migrations && npx typeorm migration:run -d dist/apps/api/src/database/data-source.prod.js",
    "typeorm:revert": "npm run build:migrations && npx typeorm migration:revert -d dist/apps/api/src/database/data-source.prod.js",
    "typeorm:drop": "npx typeorm-ts-node-esm migration:drop -d apps/api/src/database/data-source.local.ts"
  },
  "keywords": [
    "education",
    "task",
    "review",
    "platform"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@nestjs/common": "^11.0.12",
    "@nestjs/config": "^4.0.1",
    "@nestjs/core": "^11.0.12",
    "@nestjs/jwt": "^11.0.0",
    "@nestjs/passport": "^11.0.5",
    "@nestjs/platform-express": "^11.0.12",
    "@nestjs/swagger": "^11.1.0",
    "@nestjs/typeorm": "^11.0.0",
    "@radix-ui/react-tooltip": "^1.2.7",
    "axios": "^1.9.0",
    "bcrypt": "^5.1.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "express": "^5.1.0",
    "nestjs-pino": "^4.0.0",
    "openai": "^4.100.0",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "pg": "^8.11.3",
    "pino-http": "^9.0.0",
    "pino-pretty": "^10.3.1",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1",
    "typeorm": "^0.3.20"
  },
  "devDependencies": {
    "@eslint/js": "^9.28.0",
    "@tailwindcss/vite": "^4.1.7",
    "@types/bcrypt": "^5.0.2",
    "@types/multer": "^1.4.12",
    "@types/passport-jwt": "^4.0.1",
    "concurrently": "^8.2.2",
    "copy-webpack-plugin": "^13.0.0",
    "eslint": "^9.28.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.4.1",
    "eslint-plugin-unused-imports": "^4.1.4",
    "prettier": "^3.2.5",
    "tailwindcss": "^4.1.7",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript-eslint": "^8.33.1",
    "web-ui": "^0.0.0",
    "webpack-node-externals": "^3.0.0"
  },
  "workspaces": [
    "apps/*",
    "libs/*"
  ]
}
