    "@types/passport-jwt": "^4.0.1",
    "@vitejs/plugin-react": "^4.4.1",
    "copy-webpack-plugin": "^13.0.0",
    "eslint": "^9.28.0",
    "eslint-config-prettier": "^10.1.5",
